<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/title_border" />
        </shape>
    </item>
    <item android:left="0.5dp" android:right="0.5dp"  android:top="0.5dp" android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/base_background" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="0"
            android:pivotX="0.15%"
            android:pivotY="2%" >
            <shape
                android:shape="rectangle" >
                <solid android:color="@color/white" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="180"
            android:toDegrees="0"
            android:pivotX="80%"
            android:pivotY="98.9%" >
            <shape
                android:shape="rectangle"
                android:top="-80dp"
                android:right="0dp">
                <solid android:color="@color/white" />
            </shape>
        </rotate>
    </item>


    <item>
        <rotate
            android:fromDegrees="-39"
            android:toDegrees="0"
            android:pivotX="110%"
            android:pivotY="20%" >
            <shape
                android:shape="rectangle" >
                <solid android:color="@color/title_border" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-39"
            android:toDegrees="0"
            android:pivotX="110.15%"
            android:pivotY="20.15%" >
            <shape
                android:shape="rectangle" >
                <solid android:color="@color/base_background" />
            </shape>
        </rotate>
    </item>
</layer-list>